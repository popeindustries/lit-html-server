{
  "name": "@popeindustries/lit-html-server",
  "version": "3.1.0",
  "description": "Render lit-html templates on the server",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "browser": "./browser.js",
  "main": "index.js",
  "type": "module",
  "types": "index.d.ts",
  "repository": "https://github.com/popeindustries/lit-html-server.git",
  "license": "MIT",
  "engines": {
    "node": ">=12.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.0",
    "@types/node": "^15.6.0",
    "autocannon": "^7.3.0",
    "chai": "^4.3.4",
    "esbuild": "^0.12.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "get-stream": "^6.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "lit-html": "^2.0.0-rc.3",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0",
    "puppeteer": "^9.1.1",
    "send": "^0.17.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "npm run lint:src && npm run lint:types",
    "lint:src": "eslint './{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit --skipLibCheck --project jsconfig.json",
    "perf": "node test/perf.js",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npm run lint && npm run test:unit && npm run test:browser",
    "test:unit": "NODE_ENV=test mocha \"test/*-test.js\" --reporter spec --bail --timeout 2000",
    "test:browser": "node ./test/browser/cli.js",
    "prepare": "husky install"
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
