{
  "name": "@popeindustries/lit-html-server",
  "version": "4.0.0",
  "description": "Render lit-html templates on the server",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "imports": {
    "#buffer": {
      "browser": "./src/browser-buffer.js",
      "default": "node:buffer"
    },
    "#stream": {
      "browser": "./src/browser-stream.js",
      "default": "node:stream"
    }
  },
  "exports": {
    ".": {
      "browser": "./browser.mjs",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./directives/*.js": {
      "browser": "./directives/*.mjs",
      "import": "./directives/*.mjs",
      "require": "./directives/*.js"
    }
  },
  "repository": "https://github.com/popeindustries/lit-html-server.git",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/node": "^16.11.12",
    "autocannon": "^7.5.0",
    "chai": "^4.3.4",
    "chalk": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-stream": "^6.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "lit-html": "^1.4.1",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "puppeteer": "^13.0.0",
    "rollup": "^2.61.1",
    "send": "^0.17.2",
    "typescript": "^4.5.3"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "eslint './{src,test}/**/*.js'",
    "perf": "node test/perf.js",
    "prepublishOnly": "pnpm run build",
    "test": "pnpm run build && pnpm run lint && pnpm run test:unit && pnpm run test:browser",
    "test:unit": "NODE_ENV=test mocha \"test/*-test.js\" --reporter spec --bail --timeout 2000",
    "test:browser": "node ./test/browser/cli.mjs",
    "typecheck": "tsc --noEmit"
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{js,json,md,html}": [
      "prettier --write"
    ]
  }
}
